<?php

namespace backend\models;

use Yii;
use backend\models\Otchetn;

/**
 * This is the model class for table "area".
 *
 * @property integer $id
 * @property string $name
 * @property integer $kn
 */
class Area extends \yii\db\ActiveRecord
{
    public static function getDb()
    {
        return \Yii::$app->db;  
    }

    /**
     * @inheritdoc
     */
    public static function tableName()
    {
        return 'area';
    }

    /**
     * @inheritdoc
     */
    public function rules()
    {
        return [
            [['name', 'kn'], 'required'],
            [['name','kn'], 'string'],
//            [['status'], 'integer']
        ];
    }

    /**
     * @inheritdoc
     */
    public function attributeLabels()
    {
        return [
            'id' => 'ID',
            'name' => 'Name',
            'kn'    => 'Кад. квартал',
            'CountErrors' => 'кол-во ошибок',
        ];
    }
    
    
   
    public function getOtchetn()
    {
        return $this->hasOne(Otchetn::className(), ['area' => 'name']);
    }
    
    public function getCountErrors(){
        if ($this->otchetn){
            if ($data = $this->otchetn->allErrors(self::$id)){
                    return $data;
            }else 
                { return 'errors1';}
            
        } else {
            return 'errors';    
        }
        
        
        
    }
    
    
    
}
